<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_logo" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_back_white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/ic_title_bg">

        <TextView
            android:id="@+id/title_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/register_long"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_24" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="请正确填写相关信息便于主诊医生更好的为您提供康复方案！"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        android:layout_marginBottom="@dimen/dp_20"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_step_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/round_orange_bar"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="用户名/密码设置"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <View
            android:layout_width="124dp"
            android:layout_height="1dp"
            android:layout_marginStart="18dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_step_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/round_empty_bg"
            android:gravity="center"
            android:padding="7dp"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="个人信息"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:layout_marginStart="18dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_step_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/round_empty_bg"
            android:gravity="center"
            android:padding="7dp"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="医生绑定"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_step_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_56"
        tools:visibility="gone">
            <ImageView
                android:id="@+id/img_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_toLeftOf="@+id/layout_sub_step_1" />
        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="微信扫码注册"
            android:textColor="@color/white_88"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginEnd="30dp"
            android:layout_below="@+id/img_qr"
            android:layout_toLeftOf="@+id/layout_sub_step_1"/>

        <LinearLayout
            android:id="@+id/layout_sub_step_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_account"
                android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="27dp"
                android:hint="请输入用户名（选填）"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white_88"
                android:textColorHint="@color/white_88"
                android:textSize="20sp" />

            <View
                android:layout_width="480dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="27dp"
                    android:hint="请输入密码（选填）"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/white_88"
                    android:textColorHint="@color/white_88"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_pwd_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_pwd_unable" />
            </RelativeLayout>

            <View
                android:layout_width="480dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#E6EAEE" />

            <RelativeLayout
                android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="27dp"
                    android:hint="@string/hint_confirm_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/white_88"
                    android:textColorHint="@color/white_88"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_confirm_pwd_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_pwd_unable" />
            </RelativeLayout>

            <View
                android:layout_width="480dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#E6EAEE" />
            <CheckBox
                android:id="@+id/cb_password_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                style="@style/MyCheckBox"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:layout_margin="10dp"
                android:text="密码管理"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_step_1_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_orange_bg"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="@string/confirm_short"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_24" />
                <TextView
                    android:id="@+id/tv_step_skip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_orange_bg"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_10"
                    android:layout_marginStart="50dp"
                    android:text="@string/confirm_skip"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_24" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="62dp"
            android:layout_toRightOf="@id/layout_sub_step_1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录名为1-25字符"
                android:textColor="#E0FAAD14"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:text="用于登录和找回密码；2～25个字符，支持中文，以文字，字母或者数字开头，只能含有: 数字 字母 下划线 . - @"
                android:textColor="@color/white_88"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="4-20个字符，密码不能和会员名相同"
                android:textColor="@color/white_88"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_step_2"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_250">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性        别："
                        android:textColor="@color/white_88"
                        android:textSize="24sp" />

                    <RadioGroup
                        android:id="@+id/rg_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/dp_20"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox_selector"
                            android:checked="true"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_15"
                            android:text="男"
                            android:textColor="@color/white_85"
                            android:textSize="24sp" />

                        <RadioButton
                            android:id="@+id/rb_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_30"
                            android:button="@drawable/checkbox_selector"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_15"
                            android:text="女"
                            android:textColor="@color/white_85"
                            android:textSize="24sp" />
                    </RadioGroup>
                </LinearLayout>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="@string/hint_full_name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/white_88"
                    android:textColorHint="@color/white_88"
                    android:layout_marginTop="@dimen/dp_30"
                    android:textSize="20sp" />

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="#E6EAEE" />

                <EditText
                    android:id="@+id/et_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@color/transparent"
                    android:hint="@string/hint_age"
                    android:inputType="numberSigned"
                    android:maxLines="1"
                    android:textColor="@color/white_88"
                    android:textColorHint="@color/white_88"
                    android:textSize="20sp" />
                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="#E6EAEE" />
                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@color/transparent"
                    android:hint="@string/hint_weight"
                    android:inputType="numberSigned"
                    android:maxLines="1"
                    android:textColor="@color/white_88"
                    android:textColorHint="@color/white_88"
                    android:textSize="20sp" />

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="#E6EAEE" />
                <RelativeLayout
                    android:id="@+id/rl_height_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_select_height_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="请输入身高（必填）"
                        android:textColor="@color/white_88"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/img_height_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="19dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_down" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="@dimen/dp_330"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="住院时间："
                        android:textColor="@color/white_88"
                        android:textSize="24sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_gray_bg">

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:text="请选择（必填）"
                            android:textColor="@color/white_88"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_down" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="#E6EAEE"
                    android:visibility="gone"/>
            </LinearLayout>

            <View
                android:layout_width="100dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人所在地："
                        android:textColor="@color/white_88"
                        android:textSize="24sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_gray_bg">

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:text="请选择（选填）"
                            android:textColor="@color/white_88"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="19dp"
                            android:src="@drawable/ic_down" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     疾病诊断："
                        android:textColor="@color/white_88"
                        android:textSize="24sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_gray_bg">

                        <TextView
                            android:id="@+id/tv_disease_diagnosis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:text="请选择（选填）"
                            android:textColor="@color/white_88"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="19dp"
                            android:src="@drawable/ic_down" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     文化程度："
                        android:textColor="@color/white_88"
                        android:textSize="24sp" />

                    <RelativeLayout
                        android:id="@+id/rl_education_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_gray_bg">
                        <TextView
                            android:id="@+id/tv_education_level"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:text="请选择（必填）"
                            android:textColor="@color/white_88"
                            android:textSize="20sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="19dp"
                            android:src="@drawable/ic_down" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     住院时间："
                        android:textColor="@color/white_88"
                        android:textSize="24sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_gray_bg">

                        <TextView
                            android:id="@+id/tv_date1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:text="请选择（必填）"
                            android:textColor="@color/white_88"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="19dp"
                            android:src="@drawable/ic_down" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     手术名称："
                        android:textColor="@color/white_88"
                        android:textSize="24sp" />

                    <RelativeLayout
                        android:id="@+id/rl_diagnostic_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_gray_bg">
                        <TextView
                            android:id="@+id/tv_select_diagnostic_result"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:text="请选择（必填）"
                            android:textColor="@color/white_88"
                            android:textSize="20sp" />
                        <Spinner
                            android:id="@+id/sp_select_diagnostic_result"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:gravity="center"
                            android:spinnerMode="dropdown"
                            android:theme="@style/Spinner2"
                            android:visibility="gone"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="19dp"
