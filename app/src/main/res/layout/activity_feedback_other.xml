<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_50"
        android:layout_centerInParent="true">
        <LinearLayout
            android:id="@+id/ll_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本次训练已完成！"
                android:gravity="center"
                android:textColor="@color/white_88"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/tv_trained_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textColor="@color/white_88"
                android:layout_marginTop="30dp"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_complete_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_title_bg"
                    android:gravity="center"
                    android:text="@string/complete_rate"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <RatingBar
                    android:id="@+id/ratingbar_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/fiveRatingBar"
                    android:layout_marginStart="56dp"
                    android:isIndicator="true"
                    android:max="5"
                    android:progressTint="@color/colorPrimary"
                    android:rating="5"
                    android:stepSize="0.5" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_right_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_title_bg"
                    android:gravity="center"
                    android:text="@string/accuracy_rate"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <RatingBar
                    android:id="@+id/ratingbar_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/fiveRatingBar"
                    android:layout_marginStart="56dp"
                    android:isIndicator="true"
                    android:max="10"
                    android:progressTint="@color/colorPrimary"
                    android:rating="1.5"
                    android:stepSize="0.5" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_38"
                android:background="@drawable/ic_title_bg"
                android:gravity="center"
                android:text="疼痛程度"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_56"
                android:layout_marginEnd="@dimen/dp_30"
                android:orientation="vertical">
                <com.pharos.walker.customview.bubble.BubbleSeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:bsb_auto_adjust_section_mark="true"
                    app:bsb_bubble_color="@color/colorPrimary"
                    app:bsb_bubble_text_color="@color/white_88"
                    app:bsb_bubble_text_size="@dimen/sp_30"
                    app:bsb_colors="#FF00FF00_#FFFFFF00_#FFFF0000"
                    app:bsb_marks="true"
                    app:bsb_max="10"
                    app:bsb_second_track_color="@color/colorPrimary"
                    app:bsb_second_track_size="3dp"
                    app:bsb_section_count="10"
                    app:bsb_section_text_position="below_section_mark"
                    app:bsb_section_text_size="@dimen/sp_24"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_thumb_text_size="@dimen/sp_24"
                    app:bsb_touch_to_seek="true"
                    app:bsb_hide_bubble="true"
                    app:bsb_track_color="@color/axis_color"
                    app:bsb_track_size="@dimen/dp_5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_60"
                            android:orientation="horizontal"
                            android:layout_marginEnd="@dimen/feedback_line_margin">
                            <View
                                android:layout_width="@dimen/dp_1"
                                android:layout_height="@dimen/dp_50"
                                android:background="@color/white"/>
                            <View
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginTop="@dimen/dp_49"
                                android:background="@color/white"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_low"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:src="@drawable/ic_smileface" />

                        <TextView
                            android:id="@+id/tv_low"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center"
                            android:text="轻度疼痛"
                            android:textColor="@color/white_88"
                            android:textSize="@dimen/sp_24" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_60"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/feedback_line_margin">
                            <View
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginTop="@dimen/dp_49"
                                android:background="@color/white"/>
                            <View
                                android:layout_width="@dimen/dp_1"
                                android:layout_height="@dimen/dp_50"
                                android:background="@color/white"
                                android:visibility="visible"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_60"
                            android:orientation="horizontal"
                            android:layout_marginEnd="@dimen/feedback_line_margin">
                            <View
                                android:layout_width="@dimen/dp_1"
                                android:layout_height="@dimen/dp_50"
                                android:background="@color/white"
                                android:visibility="visible"/>
                            <View
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginTop="@dimen/dp_49"
                                android:background="@color/white"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/img_middle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:src="@drawable/ic_straighface" />

                        <TextView
                            android:id="@+id/tv_middle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center"
                            android:text="中度疼痛"
                            android:textColor="@color/white_88"
                            android:textSize="@dimen/sp_24" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_60"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/feedback_line_margin">
                            <View
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginTop="@dimen/dp_49"
                                android:background="@color/white"/>
                            <View
                                android:layout_width="@dimen/dp_1"
                                android:layout_height="@dimen/dp_50"
                                android:background="@color/white"
                                android:visibility="visible"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_60"
                            android:orientation="horizontal"
                            android:layout_marginEnd="@dimen/feedback_line_margin">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="@dimen/dp_50"
                                android:background="@color/white" />
                            <View
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginTop="@dimen/dp_49"
                                android:background="@color/white"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/img_high"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:src="@drawable/ic_badface" />

                        <TextView
                            android:id="@+id/tv_high"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center"
                            android:text="重度疼痛"
                            android:textColor="@color/white_88"
                            android:textSize="24sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_60"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/feedback_line_margin">
                            <View
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginTop="@dimen/dp_49"
                                android:background="@color/white"/>
                            <View
                                android:layout_width="@dimen/dp_1"
                                android:layout_height="@dimen/dp_50"
                                android:background="@color/white"
                                android:visibility="visible"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提示"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="："
                        android:textColor="@color/white_88"
                        android:textSize="24sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="60dp"
                        android:text="@string/text_feedback_tips1"
                        android:textColor="@color/white_88"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_title_bg"
                    android:gravity="center"
                    android:text="不良反应"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_24" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chk_adverse_reactions1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_selector"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp_24"
                        android:text="异响"
                        android:textColor="@color/white_88"
                        android:textSize="@dimen/sp_24" />

                    <CheckBox
                        android:id="@+id/chk_adverse_reactions2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_30"
                        android:button="@drawable/checkbox_selector"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_24"
                        android:text="出血"
                        android:textColor="@color/white_88"
                        android:textSize="@dimen/sp_24" />

                    <CheckBox
                        android:id="@+id/chk_adverse_reactions3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_30"
                        android:button="@drawable/checkbox_selector"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_24"
                        android:text="肿胀"
                        android:textColor="@color/white_88"
                        android:textSize="@dimen/sp_24" />
                    <CheckBox
                        android:id="@+id/chk_adverse_reactions4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_30"
                        android:button="@drawable/checkbox_selector"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp_24"
                        android:text="无"
                        android:textColor="@color/white_88"
                        android:textSize="@dimen/sp_24" />
                    <CheckBox
                        android:id="@+id/chk_adverse_reactions5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_30"
                        android:button="@drawable/checkbox_selector"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_24"
                        android:text="其他"
                        android:textColor="@color/white_88"
                        android:textSize="@dimen/sp_24" />
                    <EditText
                        android:id="@+id/ed_other_detail"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:textColor="@color/white_88"
                        android:gravity="center"
                        android:textSize="@dimen/sp_24"
                        android:inputType="text"
                        android:theme="@style/EditTextStyle1"
                        android:hint="请输入不良反应"
                        android:textColorHint="@color/white_65"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/ll_select_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/dp_19"
                        android:paddingStart="@dimen/dp_20"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/img_value_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_down" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:visibility="visible">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提示"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textColor="@color/white_88"
                    android:textSize="@dimen/sp_24" />
                <TextView
                    android:id="@+id/tv_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="60dp"
                    android:text="@string/text_feedback_tips"
                    android:textColor="@color/white_88"
                    android:textSize="@dimen/sp_24" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_commit_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_orange_bg"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="@string/commit_save"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:visibility="visible" />

    <TextView

        android:layout_toLeftOf="@+id/tv_commit_save"
        android:id="@+id/tv_back_last_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_orange_bg"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="@string/previous"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:visibility="gone" />
</RelativeLayout>